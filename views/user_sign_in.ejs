<link rel="stylesheet" href="/css/signin.css">
<div id="signin-container" class="card">
    <h1 class="card-title">Employee Sign-In</h1>

    <form id="user-signin-form" class="form-group" action="/users/create-session" method="POST">
        <input type="email" id="email" class="form-control mt-3" name="email" placeholder="Email" required> 
        <input type="password" id="password" class="form-control mt-3" name="password" placeholder="Password" required>
        <input type="submit" value="Sign In" class="btn btn-primary mt-4">
    </form>
</div>