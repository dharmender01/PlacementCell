<link rel="stylesheet" href="/css/student.css">

<div id="student-container">
    <div id="student-title" class="mt-3">
        <h1>
            Placements Students
        </h1>
    </div>

    <div id="student-form" class="card mt-5">
        <form action="/students/create-student" method="POST" class="form-group card">
            <input type="text" name="name" id="student-name" class="form-control" placeholder="Name" required>
            <input type="email" name="email" id="student-email" class="form-control" placeholder="Email" required>
            <input type="text" name="college" id="student-college" class="form-control" placeholder="College Name" required>
            
            <select name="batch" id="select-batch" class="">
                <option value="" disabled selected>Select Batch</option>
                <option value="Career Camp">Career Camp</option>
                <option value="React">React</option>
                <option value="Web">Web</option>
                <option value="DSA">DSA</option>
            </select>

            <select name="status" id="select-status">
                <option value="" disabled selected>Select Status</option>
                <option value="Placed"> Placed </option>
                <option value="Not_Placed"> Not Placed</option>
            </select>

            <input type="text" name="dsa" placeholder="DSA Score" class="form-control">
            <input type="text" name="webd" placeholder="Web Dev Score" class="form-control">
            <input type="text" name="react" placeholder="React Score" class="form-control">
            <input type="submit" value="Add Student" class="btn btn-primary"> 
        </form>
    </div>

    <div id="students-list-container">
        <table id="student-table" class="table table-dark">
            <thead class="thead-light">
                <tr>
                    <th rowspan="2">Student_ID</th>
                    <th rowspan="2">Name</th>
                    <th rowspan="2">Email</th>
                    <th rowspan="2">Batch</th>
                    <th rowspan="2">College</th>
                    <th rowspan="2">Status</th>
                    <th colspan="9" style="margin-left:50px; font-size: 30px;  color: darkred; ">Scores</th>
                </tr>
                <tr>
                    <th>DSA</th>
                    <th>WEBD</th>
                    <th>REACT</th>
                </tr>
            </thead>
            <tbody class="table-hover">
                <%for(s of students){%>
                    <tr>
                        <td><%=s._id%></td>
                        <td><%=s.name%></td>
                        <td><%=s.email%></td>
                        <td><%=s.batch%></td>
                        <td><%=s.college%></td>
                        <td><%=s.status%></td>
                        <td><%=s.score.dsa%></td>
                        <td><%=s.score.webd%></td>
                        <td><%=s.score.react%></td>
                    </tr>
                <%}%>
            </tbody>
        </table>
    </div>
</div>